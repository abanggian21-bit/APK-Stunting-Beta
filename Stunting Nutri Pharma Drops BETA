import React, { useState, useMemo, useEffect } from 'react';
import { 
  LayoutDashboard, 
  Users, 
  ClipboardCheck, 
  TrendingUp, 
  BookOpen, 
  Download, 
  Plus, 
  AlertTriangle,
  ChevronRight,
  Search,
  CheckCircle2,
  Clock,
  LogOut,
  Info,
  Droplets,
  HandHelping,
  Activity
} from 'lucide-react';

// --- Data Awal (Mock Data) ---
const INITIAL_BALITA = [
  {
    id: "B001",
    nama: "Andi Wijaya",
    nik: "3273010101230001",
    usia: 24,
    gender: "Laki-laki",
    ortu: "Siti Aminah",
    tbAwal: 80.5,
    bbAwal: 10.2,
    tbSekarang: 82.0,
    bbSekarang: 10.8,
    obat: "Vitamin A & Zinc",
    dosis: "1 x 1 tablet",
    periode: 6,
    kader: "Ibu Ratna",
    absensi: [true, true, false, true, true, true, false],
    statusGizi: "Stunting Ringan",
    catatan: "Nafsu makan membaik"
  },
  {
    id: "B002",
    nama: "Siska Putri",
    nik: "3273010101230002",
    usia: 18,
    gender: "Perempuan",
    ortu: "Budi Santoso",
    tbAwal: 75.0,
    bbAwal: 8.5,
    tbSekarang: 75.2,
    bbSekarang: 8.6,
    obat: "Zat Besi (Fe)",
    dosis: "1 x 1 sendok takar",
    periode: 3,
    kader: "Ibu Sari",
    absensi: [true, true, true, true, true, true, true],
    statusGizi: "Sangat Pendek",
    catatan: "Sering batuk pilek"
  }
];

const App = () => {
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const [userRole, setUserRole] = useState(null); // 'admin' atau 'kader'
  const [activeTab, setActiveTab] = useState('dashboard');
  const [balitaList, setBalitaList] = useState(INITIAL_BALITA);
  const [searchTerm, setSearchTerm] = useState('');
  const [stepObat, setStepObat] = useState(0);
  const [isModalOpen, setIsModalOpen] = useState(false);

  // --- Login Handler ---
  const handleLogin = (role) => {
    setUserRole(role);
    setIsLoggedIn(true);
    setActiveTab('dashboard');
  };

  const handleLogout = () => {
    setIsLoggedIn(false);
    setUserRole(null);
  };

  // --- Logika Bisnis ---
  const calculateCompliance = (absensi) => {
    if (!absensi || absensi.length === 0) return 0;
    const present = absensi.filter(a => a).length;
    return Math.round((present / absensi.length) * 100);
  };

  const filteredBalita = balitaList.filter(b => 
    b.nama.toLowerCase().includes(searchTerm.toLowerCase()) || 
    b.id.toLowerCase().includes(searchTerm.toLowerCase())
  );

  const stats = useMemo(() => {
    const total = balitaList.length;
    const avgCompliance = balitaList.reduce((acc, b) => acc + calculateCompliance(b.absensi), 0) / (total || 1);
    const highRisk = balitaList.filter(b => calculateCompliance(b.absensi) < 75).length;
    return { total, avgCompliance: Math.round(avgCompliance), highRisk };
  }, [balitaList]);

  const toggleAbsensi = (balitaId, dayIdx) => {
    setBalitaList(prev => prev.map(b => {
      if (b.id === balitaId) {
        const newAbsensi = [...b.absensi];
        newAbsensi[dayIdx] = !newAbsensi[dayIdx];
        return { ...b, absensi: newAbsensi };
      }
      return b;
    }));
  };

  // --- Views ---

  const LoginView = () => (
    <div className="min-h-screen bg-gradient-to-br from-indigo-700 via-blue-800 to-indigo-900 flex items-center justify-center p-6">
      <div className="bg-white w-full max-w-md rounded-[2.5rem] shadow-2xl p-10 text-center relative overflow-hidden">
        <div className="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-pink-500 to-indigo-500"></div>
        <div className="w-24 h-24 bg-indigo-50 rounded-3xl flex items-center justify-center mx-auto mb-6 transform rotate-12 transition-transform hover:rotate-0">
          <HandHelping size={48} className="text-indigo-600" />
        </div>
        <h1 className="text-3xl font-black text-slate-800 tracking-tight">CegahStunting</h1>
        <p className="text-slate-500 mt-2 mb-10 text-sm">Portal Monitoring Obat & Gizi Balita</p>
        
        <div className="space-y-4">
          <button 
            onClick={() => handleLogin('kader')}
            className="w-full flex items-center justify-between p-5 bg-slate-50 hover:bg-indigo-50 border-2 border-transparent hover:border-indigo-100 rounded-2xl transition-all group shadow-sm"
          >
            <div className="flex items-center space-x-4">
              <div className="bg-white p-3 rounded-xl shadow-sm group-hover:bg-indigo-600 group-hover:text-white transition-all">
                <ClipboardCheck size={20} />
              </div>
              <div className="text-left">
                <p className="font-bold text-slate-800">Masuk Kader</p>
                <p className="text-[10px] text-slate-500 uppercase font-semibold">Absensi & Edukasi</p>
              </div>
            </div>
            <ChevronRight size={18} className="text-slate-300 group-hover:text-indigo-500 transition-colors" />
          </button>

          <button 
            onClick={() => handleLogin('admin')}
            className="w-full flex items-center justify-between p-5 bg-slate-50 hover:bg-emerald-50 border-2 border-transparent hover:border-emerald-100 rounded-2xl transition-all group shadow-sm"
          >
            <div className="flex items-center space-x-4">
              <div className="bg-white p-3 rounded-xl shadow-sm group-hover:bg-emerald-600 group-hover:text-white transition-all">
                <LayoutDashboard size={20} />
              </div>
              <div className="text-left">
                <p className="font-bold text-slate-800">Masuk Admin</p>
                <p className="text-[10px] text-slate-500 uppercase font-semibold">Analisis Data Wilayah</p>
              </div>
            </div>
            <ChevronRight size={18} className="text-slate-300 group-hover:text-emerald-500 transition-colors" />
          </button>
        </div>
        <div className="mt-10 pt-6 border-t border-slate-100">
          <p className="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Kementerian Kesehatan RI ‚Ä¢ 2024</p>
        </div>
      </div>
    </div>
  );

  const PenggunaanObatView = () => {
    const steps = [
      { 
        title: "Kebersihan Tangan", 
        desc: "Cuci tangan dengan sabun di bawah air mengalir selama 20 detik.", 
        icon: "üßº",
        instruction: "Gerakkan telapak tangan memutar" 
      },
      { 
        title: "Siapkan Takaran", 
        desc: "Kocok botol obat, gunakan pipet atau sendok takar asli.", 
        icon: "ü•Ñ",
        instruction: "Pegang sendok tetap mendatar" 
      },
      { 
        title: "Posisikan Balita", 
        desc: "Pangku balita dalam posisi agak tegak (45 derajat).", 
        icon: "üë∂",
        instruction: "Berikan sentuhan lembut di pipi" 
      },
      { 
        title: "Berikan Obat", 
        desc: "Teteskan perlahan ke sisi dalam mulut, bukan tenggorokan.", 
        icon: "üçº",
        instruction: "Tunggu anak menelan sebelum suapan berikutnya" 
      }
    ];

    return (
      <div className="max-w-5xl mx-auto">
        <div className="bg-white p-10 rounded-[2.5rem] shadow-sm border border-slate-100 relative overflow-hidden">
          <div className="absolute top-0 right-0 p-10 opacity-5">
            <Activity size={200} />
          </div>

          <div className="flex flex-col lg:flex-row gap-16 items-center">
            {/* Stage Animasi */}
            <div className="w-full lg:w-1/2 flex flex-col items-center">
              <div className="relative w-80 h-80 bg-indigo-50 rounded-[3rem] flex items-center justify-center border-4 border-white shadow-xl overflow-hidden group">
                <div className={`text-[10rem] transition-all duration-1000 ease-in-out transform ${stepObat % 2 === 0 ? 'scale-110 -rotate-6' : 'scale-100 rotate-6'}`}>
                  {steps[stepObat].icon}
                </div>
                
                {/* Visual Feedback Animasi */}
                <div className="absolute inset-0 flex items-center justify-center pointer-events-none">
                  <div className="w-64 h-64 border-2 border-indigo-200 rounded-full animate-ping opacity-20"></div>
                </div>

                <div className="absolute bottom-6 left-6 right-6 bg-white/80 backdrop-blur-md p-3 rounded-2xl border border-white/50 text-center">
                  <p className="text-[10px] font-black text-indigo-600 uppercase tracking-widest flex items-center justify-center">
                    <Info size={12} className="mr-1" /> Instruksi Gerakan
                  </p>
                  <p className="text-xs font-bold text-slate-700 mt-1">{steps[stepObat].instruction}</p>
                </div>
              </div>
              
              <div className="mt-10 flex space-x-2">
                {steps.map((_, i) => (
                  <div key={i} className={`h-1.5 transition-all duration-500 rounded-full ${stepObat === i ? 'w-12 bg-indigo-600' : 'w-4 bg-slate-200'}`}></div>
                ))}
              </div>
            </div>

            {/* List Navigasi Langkah */}
            <div className="w-full lg:w-1/2 space-y-4">
              <h3 className="text-2xl font-black text-slate-800 mb-6 flex items-center">
                <Droplets className="text-pink-500 mr-3" /> Panduan Pemberian Obat
              </h3>
              {steps.map((s, idx) => (
                <div 
                  key={idx}
                  onClick={() => setStepObat(idx)}
                  className={`group p-5 rounded-[1.5rem] cursor-pointer transition-all border-2 ${
                    stepObat === idx 
                    ? 'bg-indigo-600 border-indigo-600 text-white shadow-lg translate-x-2' 
                    : 'bg-white border-slate-100 text-slate-500 hover:border-indigo-100 hover:bg-slate-50'
                  }`}
                >
                  <div className="flex items-center space-x-5">
                    <span className={`text-xl font-black w-10 h-10 flex items-center justify-center rounded-xl transition-colors ${
                      stepObat === idx ? 'bg-white text-indigo-600' : 'bg-slate-100 text-slate-400 group-hover:bg-indigo-50'
                    }`}>
                      {idx + 1}
                    </span>
                    <div>
                      <h4 className="font-black text-lg">{s.title}</h4>
                      {stepObat === idx && <p className="text-sm mt-2 leading-relaxed opacity-90">{s.desc}</p>}
                    </div>
                  </div>
                </div>
              ))}
              <div className="pt-6 flex gap-4">
                <button 
                  disabled={stepObat === 0}
                  onClick={() => setStepObat(p => p - 1)}
                  className="flex-1 py-4 px-6 rounded-2xl font-bold text-slate-400 bg-slate-100 disabled:opacity-50"
                >
                  Kembali
                </button>
                <button 
                  onClick={() => setStepObat(p => (p < steps.length - 1 ? p + 1 : 0))}
                  className="flex-[2] py-4 px-6 rounded-2xl font-bold bg-indigo-600 text-white shadow-lg hover:bg-indigo-700 transition-colors"
                >
                  {stepObat === steps.length - 1 ? "Mulai Dari Awal" : "Langkah Berikutnya"}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  };

  if (!isLoggedIn) return <LoginView />;

  return (
    <div className="flex min-h-screen bg-[#F8FAFC] font-sans text-slate-900">
      {/* Sidebar */}
      <aside className="w-72 bg-indigo-900 text-white flex-shrink-0 flex flex-col shadow-2xl z-20">
        <div className="p-8 border-b border-white/10">
          <div className="flex items-center space-x-3">
            <div className="bg-white p-2 rounded-xl">
              <Activity className="text-indigo-900" size={24} />
            </div>
            <h1 className="text-xl font-black tracking-tighter italic">CegahStunting</h1>
          </div>
        </div>

        <nav className="p-4 flex-1 space-y-2">
          <SidebarItem id="dashboard" icon={LayoutDashboard} label="Beranda Utama" activeTab={activeTab} setActiveTab={setActiveTab} />
          {userRole === 'admin' && (
            <SidebarItem id="balita" icon={Users} label="Database Balita" activeTab={activeTab} setActiveTab={setActiveTab} />
          )}
          <SidebarItem id="absensi" icon={ClipboardCheck} label="Absensi Obat" activeTab={activeTab} setActiveTab={setActiveTab} />
          <SidebarItem id="penggunaan-obat" icon={Droplets} label="Tata Cara Obat" activeTab={activeTab} setActiveTab={setActiveTab} />
          <SidebarItem id="evaluasi" icon={TrendingUp} label="Evaluasi Gizi" activeTab={activeTab} setActiveTab={setActiveTab} />
          <SidebarItem id="edukasi" icon={BookOpen} label="Edukasi Stunting" activeTab={activeTab} setActiveTab={setActiveTab} />
        </nav>
        
        <div className="p-8 border-t border-white/10">
          <div className="flex items-center space-x-4 bg-white/5 p-4 rounded-2xl">
            <div className="w-10 h-10 rounded-full bg-pink-500 flex items-center justify-center font-black uppercase text-xs border-2 border-white/20">
              {userRole[0]}
            </div>
            <div className="flex-1 min-w-0">
              <p className="text-xs font-black uppercase text-white/40 mb-0.5">Sesi Aktif</p>
              <p className="text-sm font-bold truncate">{userRole === 'admin' ? 'Administrator' : 'Kader Posyandu'}</p>
            </div>
            <button onClick={handleLogout} className="text-white/40 hover:text-white transition-colors">
              <LogOut size={18} />
            </button>
          </div>
        </div>
      </aside>

      {/* Konten Utama */}
      <main className="flex-1 flex flex-col h-screen overflow-hidden">
        <header className="bg-white/80 backdrop-blur-md border-b border-slate-200 h-20 flex items-center justify-between px-10 sticky top-0 z-10">
          <div>
            <h2 className="text-xl font-black text-slate-800 capitalize tracking-tight">
              {activeTab.replace('-', ' ')}
            </h2>
            <p className="text-[10px] text-slate-400 font-bold uppercase tracking-widest mt-0.5">Posyandu Mekar Wangi ‚Ä¢ Unit 04</p>
          </div>
          <div className="flex items-center space-x-6">
            <div className="text-right">
              <p className="text-xs font-bold text-slate-500">{new Date().toLocaleDateString('id-ID', { weekday: 'long' })}</p>
              <p className="text-sm font-black text-slate-800">{new Date().toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' })}</p>
            </div>
          </div>
        </header>

        <div className="flex-1 overflow-y-auto p-10">
          
          {/* Dashboard View */}
          {activeTab === 'dashboard' && (
            <div className="space-y-8">
              <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                <StatCard title="Total Balita" value={stats.total} subtitle="Dalam Pengawasan" type="neutral" />
                <StatCard title="Rerata Patuh" value={`${stats.avgCompliance}%`} subtitle="Minggu Berjalan" type="success" progress={stats.avgCompliance} />
                <StatCard title="Risiko Tinggi" value={stats.highRisk} subtitle="Kunjungan Rumah" type="danger" />
              </div>

              <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div className="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100">
                  <div className="flex justify-between items-center mb-6">
                    <h4 className="font-black text-slate-800 flex items-center"><AlertTriangle className="text-rose-500 mr-2" size={20} /> Prioritas Pemantauan</h4>
                  </div>
                  <div className="space-y-4">
                    {balitaList.filter(b => calculateCompliance(b.absensi) < 80).map(b => (
                      <div key={b.id} className="group flex items-center justify-between p-4 bg-slate-50 rounded-2xl hover:bg-rose-50 transition-colors cursor-pointer">
                        <div className="flex items-center space-x-4">
                          <div className="w-10 h-10 bg-white rounded-xl flex items-center justify-center font-black text-rose-500 border border-slate-200 group-hover:border-rose-200">
                            !
                          </div>
                          <div>
                            <p className="font-bold text-slate-800">{b.nama}</p>
                            <p className="text-[10px] text-slate-400 font-bold uppercase">{b.ortu}</p>
                          </div>
                        </div>
                        <div className="text-right">
                          <p className="text-rose-600 font-black">{calculateCompliance(b.absensi)}%</p>
                          <p className="text-[8px] font-black text-slate-400 uppercase">Kepatuhan</p>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                <div className="bg-indigo-600 p-8 rounded-[2rem] shadow-xl text-white flex flex-col justify-between relative overflow-hidden group">
                  <div className="absolute -right-10 -top-10 bg-white/10 w-40 h-40 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-1000"></div>
                  <div className="relative">
                    <span className="bg-white/20 px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest">Tutorial Kader</span>
                    <h4 className="text-2xl font-black mt-4 mb-3">Cara Mengajarkan Orang Tua Memberi Obat Zinc</h4>
                    <p className="text-indigo-100 text-sm leading-relaxed opacity-80">Pelajari teknik demonstrasi agar orang tua balita dapat memberikan obat secara mandiri dengan benar dan higienis.</p>
                  </div>
                  <button 
                    onClick={() => setActiveTab('penggunaan-obat')}
                    className="relative mt-8 bg-white text-indigo-600 py-4 rounded-2xl font-black text-sm hover:shadow-2xl transition-all hover:-translate-y-1 flex items-center justify-center"
                  >
                    Buka Panduan Animasi <ChevronRight size={16} className="ml-1" />
                  </button>
                </div>
              </div>
            </div>
          )}

          {/* Absensi View */}
          {activeTab === 'absensi' && (
            <div className="space-y-6">
              <div className="flex items-center space-x-4 mb-8">
                <div className="relative flex-1">
                  <Search className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400" size={18} />
                  <input 
                    type="text" 
                    placeholder="Cari NIK atau Nama Balita..."
                    className="w-full pl-12 pr-4 py-4 rounded-2xl border-2 border-slate-100 focus:border-indigo-500 outline-none transition-all font-medium text-slate-700 bg-white"
                    value={searchTerm}
                    onChange={(e) => setSearchTerm(e.target.value)}
                  />
                </div>
              </div>

              <div className="bg-white rounded-[2rem] shadow-sm border border-slate-100 overflow-hidden">
                <div className="overflow-x-auto">
                  <table className="w-full text-left border-collapse min-w-[800px]">
                    <thead>
                      <tr className="bg-slate-50/50 text-slate-400 text-[10px] font-black uppercase tracking-[0.2em]">
                        <th className="px-8 py-6">Identitas Balita</th>
                        <th className="px-2 py-6 text-center">S</th>
                        <th className="px-2 py-6 text-center">S</th>
                        <th className="px-2 py-6 text-center">R</th>
                        <th className="px-2 py-6 text-center">K</th>
                        <th className="px-2 py-6 text-center">J</th>
                        <th className="px-2 py-6 text-center">S</th>
                        <th className="px-2 py-6 text-center">M</th>
                        <th className="px-8 py-6 text-right">Kepatuhan</th>
                      </tr>
                    </thead>
                    <tbody className="divide-y divide-slate-100">
                      {filteredBalita.map((b) => (
                        <tr key={b.id} className="hover:bg-slate-50/50 transition-colors group">
                          <td className="px-8 py-6">
                            <div className="flex flex-col">
                              <p className="font-black text-slate-800 group-hover:text-indigo-600 transition-colors">{b.nama}</p>
                              <p className="text-[10px] font-bold text-slate-400 mt-0.5">{b.obat} ‚Ä¢ {b.dosis}</p>
                            </div>
                          </td>
                          {b.absensi.map((status, idx) => (
                            <td key={idx} className="px-2 py-6 text-center">
                              <button 
                                onClick={() => toggleAbsensi(b.id, idx)}
                                className={`p-1.5 rounded-xl transition-all active:scale-90 ${status ? 'text-emerald-500' : 'text-slate-200 hover:text-slate-400'}`}
                              >
                                {status ? <CheckCircle2 size={28} fill="currentColor" className="text-white bg-emerald-500 rounded-full border-2 border-emerald-500" /> : <Clock size={28} />}
                              </button>
                            </td>
                          ))}
                          <td className="px-8 py-6 text-right">
                            <div className={`inline-flex items-center px-4 py-2 rounded-xl text-[10px] font-black uppercase ${
                              calculateCompliance(b.absensi) > 80 ? 'bg-emerald-100 text-emerald-700' : 'bg-rose-100 text-rose-700'
                            }`}>
                              {calculateCompliance(b.absensi)}% Patuh
                            </div>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
              <p className="text-center text-slate-400 text-xs mt-4 italic font-medium">* Klik pada ikon jam untuk mencatat pemberian obat hari ini</p>
            </div>
          )}

          {/* Penggunaan Obat View */}
          {activeTab === 'penggunaan-obat' && <PenggunaanObatView />}

          {/* Evaluasi Gizi View */}
          {activeTab === 'evaluasi' && (
            <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
              {balitaList.map(b => (
                <div key={b.id} className="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100 group hover:border-indigo-200 transition-colors">
                  <div className="flex justify-between items-start mb-6">
                    <div>
                      <h4 className="text-xl font-black text-slate-800">{b.nama}</h4>
                      <p className="text-xs font-bold text-slate-400 uppercase tracking-widest mt-1">NIK: {b.nik}</p>
                    </div>
                    <span className={`px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-widest ${
                      b.statusGizi.includes('Sangat') ? 'bg-rose-100 text-rose-700' : 'bg-amber-100 text-amber-700'
                    }`}>
                      {b.statusGizi}
                    </span>
                  </div>
                  
                  <div className="grid grid-cols-2 gap-6 mb-8">
                    <div className="p-4 bg-slate-50 rounded-2xl border border-slate-100">
                      <p className="text-[10px] text-slate-400 font-black uppercase tracking-widest mb-2">Tinggi Badan</p>
                      <div className="flex items-baseline space-x-2">
                        <span className="text-2xl font-black text-slate-800">{b.tbSekarang}</span>
                        <span className="text-xs font-bold text-emerald-600">+{ (b.tbSekarang - b.tbAwal).toFixed(1) } cm</span>
                      </div>
                    </div>
                    <div className="p-4 bg-slate-50 rounded-2xl border border-slate-100">
                      <p className="text-[10px] text-slate-400 font-black uppercase tracking-widest mb-2">Berat Badan</p>
                      <div className="flex items-baseline space-x-2">
                        <span className="text-2xl font-black text-slate-800">{b.bbSekarang}</span>
                        <span className="text-xs font-bold text-emerald-600">+{ (b.bbSekarang - b.bbAwal).toFixed(1) } kg</span>
                      </div>
                    </div>
                  </div>

                  <div className="border-t border-slate-100 pt-6 space-y-4">
                    <div className="flex items-start space-x-4">
                      <div className="p-2 bg-indigo-50 text-indigo-600 rounded-lg"><Activity size={16} /></div>
                      <div className="flex-1">
                        <p className="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Catatan Terakhir</p>
                        <p className="text-sm text-slate-700 font-medium leading-relaxed italic">"{b.catatan}"</p>
                      </div>
                    </div>
                    <div className="bg-slate-50 p-4 rounded-xl">
                       <p className="text-[10px] font-black text-indigo-600 uppercase mb-1 tracking-widest">Rekomendasi Tindak Lanjut</p>
                       <p className="text-xs text-slate-600 font-bold leading-relaxed">
                         {calculateCompliance(b.absensi) < 80 
                           ? "Lakukan pendekatan persuasif ke orang tua. Periksa ketersediaan stok suplemen di rumah." 
                           : "Pertahankan rutinitas. Tambahkan asupan protein hewani minimal 1 butir telur/hari."}
                       </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}

        </div>
      </main>

      {/* FAB Tambah Balita */}
      {userRole === 'admin' && (
        <button 
          onClick={() => setIsModalOpen(true)}
          className="fixed bottom-10 right-10 w-16 h-16 bg-indigo-600 text-white rounded-full shadow-2xl hover:bg-indigo-700 transition-all flex items-center justify-center hover:scale-110 active:scale-95 group"
        >
          <Plus size={28} className="group-hover:rotate-90 transition-transform duration-500" />
        </button>
      )}

      {/* Modal Demo */}
      {isModalOpen && (
        <div className="fixed inset-0 bg-slate-900/40 backdrop-blur-md z-[100] flex items-center justify-center p-6">
          <div className="bg-white w-full max-w-xl rounded-[2.5rem] shadow-2xl overflow-hidden animate-in fade-in zoom-in duration-300">
            <div className="p-8 border-b border-slate-100 flex justify-between items-center">
              <h3 className="text-2xl font-black text-slate-800">Registrasi Balita Baru</h3>
              <button onClick={() => setIsModalOpen(false)} className="text-slate-300 hover:text-slate-600 transition-colors">&times;</button>
            </div>
            <div className="p-10 space-y-6">
              <div className="text-center p-8 bg-slate-50 rounded-3xl border-2 border-dashed border-slate-200">
                <Users size={40} className="mx-auto text-slate-300 mb-4" />
                <p className="text-slate-500 font-bold">Formulir Pendaftaran Pasien</p>
                <p className="text-xs text-slate-400 mt-1">Lengkapi data identitas, status gizi awal, dan jenis obat yang diberikan.</p>
              </div>
              <button 
                onClick={() => setIsModalOpen(false)}
                className="w-full py-4 bg-indigo-600 text-white rounded-2xl font-black shadow-lg shadow-indigo-200 hover:bg-indigo-700 transition-all"
              >
                Konfirmasi Simpan Data
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

// --- Sub-Komponen ---

const SidebarItem = ({ id, icon: Icon, label, activeTab, setActiveTab }) => {
  const isActive = activeTab === id;
  return (
    <button
      onClick={() => setActiveTab(id)}
      className={`w-full flex items-center space-x-4 px-6 py-4 rounded-2xl transition-all duration-300 group ${
        isActive 
        ? 'bg-white/10 text-white shadow-lg shadow-black/10 translate-x-1' 
        : 'text-indigo-200 hover:bg-white/5 hover:text-white'
      }`}
    >
      <Icon size={20} className={`transition-transform duration-500 ${isActive ? 'scale-110' : 'opacity-50 group-hover:opacity-100'}`} />
      <span className={`text-sm font-bold tracking-tight ${isActive ? 'opacity-100' : 'opacity-60 group-hover:opacity-100'}`}>{label}</span>
      {isActive && <div className="ml-auto w-1.5 h-1.5 bg-pink-500 rounded-full animate-pulse shadow-[0_0_10px_#EC4899]"></div>}
    </button>
  );
};

const StatCard = ({ title, value, subtitle, type, progress }) => {
  const styles = {
    success: "bg-emerald-50 text-emerald-600 border-emerald-100",
    danger: "bg-rose-50 text-rose-600 border-rose-100",
    neutral: "bg-indigo-50 text-indigo-600 border-indigo-100"
  };

  return (
    <div className={`p-8 rounded-[2.5rem] bg-white border border-slate-100 shadow-sm relative overflow-hidden group`}>
      <div className="relative z-10">
        <p className="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 group-hover:text-indigo-600 transition-colors">{title}</p>
        <h3 className={`text-4xl font-black text-slate-800`}>{value}</h3>
        <p className="text-xs font-bold text-slate-500 mt-2">{subtitle}</p>
        
        {progress !== undefined && (
          <div className="mt-6 w-full bg-slate-100 h-2 rounded-full overflow-hidden">
            <div 
              className="bg-indigo-600 h-full rounded-full transition-all duration-1000 ease-out" 
              style={{ width: `${progress}%` }}
            ></div>
          </div>
        )}
      </div>
      {type === 'danger' && value > 0 && (
        <div className="absolute top-4 right-4 animate-bounce">
          <AlertTriangle className="text-rose-500" size={20} />
        </div>
      )}
    </div>
  );
};

export default App;
